<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">
    <ImageView
            android:id="@+id/popup_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/con6"
            android:layout_marginTop="30dp"/>
    <TextView
            android:id="@+id/popup_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Name"/>
    <TextView

            android:id="@+id/popup_class_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Class"/>

    <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/hearts"/>
        <TextView
                android:id="@+id/stats_maxhp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/strength"/>
        <TextView
                android:id="@+id/stats_strength"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/defense"/>
        <TextView
                android:id="@+id/stats_defense"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/magic"/>
        <TextView
                android:id="@+id/stats_magic"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/magicdefense"/>
        <TextView
                android:id="@+id/stats_magicdefense"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/agility"/>
        <TextView
                android:id="@+id/stats_agility"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/luck"/>
        <TextView
                android:id="@+id/stats_luck"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="100"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingVertical="7dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <Button
                android:id="@+id/add_del_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#1167b1"
                android:text="Add"/>

        <Button
                android:layout_marginTop="15dp"
                android:id="@+id/popup_close_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#1167b1"
                android:text="Close"/>
    </LinearLayout>

</LinearLayout>