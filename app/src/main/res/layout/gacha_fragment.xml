<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragment.GachaFragment">

    <ImageView
            android:id="@+id/common"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:src="@drawable/commonchest"
            android:background="@drawable/background_images"
            android:paddingHorizontal="30dp"
            android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rare"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rare"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="150dp"
            android:text="1 x"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/key"
            app:layout_constraintTop_toTopOf="@id/common"
            app:layout_constraintBottom_toBottomOf="@id/common"
            app:layout_constraintStart_toEndOf="@id/common"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="70dp"/>

    <ImageView
            android:id="@+id/rare"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:src="@drawable/crystalchest"
            android:background="@drawable/background_images"
            android:paddingHorizontal="30dp"
            android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/common"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/common"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="150dp"
            android:text="5 x"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/key"
            app:layout_constraintTop_toTopOf="@id/rare"
            app:layout_constraintBottom_toBottomOf="@id/rare"
            app:layout_constraintStart_toEndOf="@id/rare"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>